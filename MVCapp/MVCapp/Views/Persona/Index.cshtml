
@{
    ViewBag.Title = "Index";
}

<script src="~/Angular/Persona.js"></script>


<div class="container" ng-controller="Persona">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Personas</h1>
                    <p class="lead">Aqui estara la lista de todas las personas.</p>
                    <p>
                        <a href="../Persona/AgregarPersona" class="btn btn-success">Agregar</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <input type="text" placeholder="Buscar" class="form-control" ng-model="tBuscador" />
        </div>
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Id_Tipo_Persona</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="i in PersonasData | filter:{Nombres : tBuscador } | orderBy:Id">
                        <td>{{i.Id}}</td>
                        <td>{{i.Nombres}}</td>
                        <td>{{i.Apellidos}}</td>
                        <td>{{i.Id_Tipo_Persona}}</td>
                        <td>
                            <button type="button" class="btn btn-primary" ng-click="SeleccionarPersonaParaModificar(i)">Modificar</button>
                            <button type="button" class="btn btn-danger" ng-click="EliminarPersona(i.Id)">Eliminar</button>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>





    <!-- Modal -->
    <div class="modal fade" id="modalModificar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modificar Registro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="row">
                        <div class="col-md-12 form-group">
                            <label>Nombres</label>
                            <input type="text" class="form-control" ng-model="mNombres" />
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Apellidos</label>
                            <input type="text" class="form-control" ng-model="mApellidos" />
                        </div>
                        <div class="col-md-12 form-group">
                            <label>FK_Materia {{mId_Tipo_Persona}}</label>
                            <select class="form-control" ng-model="mId_Tipo_Persona">
                                <option ng-repeat="i in TipoPersonasData" value="{{i.Id}}">{{i.Nombre}} </option>
                            </select>
                        </div>
                        <div class="col-md-12 form-group">
                            <p class="text-right">
                                <button type="button" class="btn btn-primary" ng-click="ModificarPersona()">Modificar</button>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



</div>




